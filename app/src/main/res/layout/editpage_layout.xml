<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"  
     xmlns:tools="http://schemas.android.com/tools"
 android:layout_width="fill_parent"  
 android:layout_height="fill_parent"  
 android:fadingEdge="vertical"
 android:scrollbarStyle="insideOverlay">  
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <RadioGroup 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/radiogroup">

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LONG" />

      <RadioButton
          android:id="@+id/radioButton3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="MIDDLE" />

      <RadioButton
          android:id="@+id/radioButton1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="SHORT" />

   </RadioGroup>
   
    
           <TextView
            android:id="@+id/topicInfo"
            android:layout_below="@+id/radiogroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="THEME" />

        <EditText
            android:id="@+id/edittopic"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topicInfo"
            android:ems="10" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edittopic"
            android:text="DATE" />

        
        <EditText
            android:id="@+id/editdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date"
            android:ems="10" />

        <Button
            android:id="@+id/choosedate"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/time"
            android:layout_alignRight="@+id/choosetime"
            android:layout_below="@+id/date"
            android:layout_toRightOf="@+id/editdate"
            android:text="CHOOSE Date"
            android:textSize="21dip" />
              
             <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editdate"
            android:text="TIME" />

        
        <EditText
            android:id="@+id/edittime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time"
            android:ems="10" 
            />

        <Button
            android:id="@+id/choosetime"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView3"
            android:layout_below="@+id/time"
            android:layout_toRightOf="@+id/edittime"
            android:text="CHOOSE Time"
            android:textSize="21dip" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edittime"
            android:text="PRIORITY" />

        <Spinner
            android:id="@+id/spinner1"
            tools:listitem="@android:layout/simple_spinner_item"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            />

        <TextView
            android:id="@+id/detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner1"
            android:text="COMMENT" />

        <EditText
            android:id="@+id/xiangxi"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail"
            android:ems="10"
            android:inputType="textMultiLine"
            android:scrollbarAlwaysDrawVerticalTrack="true" />

                <Button
                    android:id="@+id/edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/xiangxi"
                    android:text="SAVE " />

                <Button
                    android:id="@+id/cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/xiangxi"
                    android:text="CANCEL" />

                <ProgressBar
                    android:id="@+id/progressBar1"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/textView3"
                    android:layout_centerHorizontal="true"
                    android:visibility="gone" />

</RelativeLayout>
</ScrollView>